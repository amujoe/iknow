<!--index.wxml-->

<view class="container">
  <!--浮层-->
  <movable-area class="mov-area">
    <movable-view class="mov-view" 
      x="{{x}}" y="{{y}}" 
      direction="all"
      inertia="true"
      out-of-bounds="true"
      damping="50"
      friction="5"
      bindchange="cardMove" bindtap="seeDetail">
    </movable-view>
  </movable-area>

  <view class="card-box">
    <!--active-->
    <view class="box-active card" animation="{{animation}}">
      <view>您好 {{item_active.name}} {{item_active_index}}</view>

      <!-- 展示 -->
      <rich-text nodes="{{ item_active.content }}"></rich-text>
      <!-- 展示 end -->
    </view>
    <!--next-->
    <view class="box-top card" animation="{{animation_t}}">
      <view>您好 {{item_next.name}} {{item_active_index}}</view>

      <!-- 展示 -->
      <rich-text nodes="{{ item_next.content }}"></rich-text>
      <!-- 展示 end -->
    </view>
    <view class="box-mid" animation="{{animation_m}}"></view>
    <view class="box-end" animation="{{animation_e}}"></view>
  </view>
</view>
