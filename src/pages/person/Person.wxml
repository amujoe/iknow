<view class="container">
  
  <!-- 头部 -->
  <view class="top">
    <view class="t-font">是你认识的 Ta 嘛</view>
  </view>

  <!-- 信息 -->
  <view class="info">
    <view class="in-img">
      <image src="{{info.image[0]}}" />
    </view>
    <view class="in-name">{{info.name}}</view>
  </view>

  <!-- title -->
  <view class="title" bindtap="todoTag">
    加标签
  </view>
</view>
  <!-- 新增 -->
  <view class="tag-create {{show_create_tag === true ? 'tag-show' : ''}}">
    <input wx:if="{{show_create_tag}}" type="text" bindinput="tagChange" maxlength="10" placeholder="请输入 Ta 在你心中的印象"/>
    <view wx:if="{{show_create_tag}}" class="tag-create-btn" bindtap="toCreateTag">提交</view>
  </view>

<view class="container">
  <!-- tags -->
  <view class="tags">
    <text>帅哥(12)</text>
    <text>中年油腻(234)</text>
    <text>帅哥(234)</text>
  </view>

  <!-- title -->
  <view class="title" bindtap="outputImage">
    <i class="iconfont"></i>爆黑料
  </view>
  <!-- 形象 -->
  <view class="box">
    <block wx:for="{{list}}" wx:key="{{index}}">
      <view class="item">
        <view class="i-img">
          <image src="{{item.image}}" />
        </view>
        <view class="i-name">{{item.name}}</view>
      </view>
    </block>
  </view>

  <!-- footer -->
  <view class="footer">
    <button type="default" 
      bindtap="defaultTap">Button</button>
  </view>
</view>